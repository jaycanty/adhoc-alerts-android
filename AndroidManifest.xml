<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.aha"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8" />

    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name="com.aha.activities.InitActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		<activity android:name="com.aha.activities.AlertsTab" 
				  android:label="@string/app_name"
          		  android:theme="@android:style/Theme.NoTitleBar">  
        </activity>  		        
        <activity android:name="com.aha.activities.AlertsActivity"
                  android:label="@string/app_name">
        </activity>
        <activity android:name="com.aha.activities.NetworkActivity"
                  android:label="@string/app_name">
        </activity> 
        <activity android:name="com.aha.activities.SendMessageActivity"
                  android:label="@string/app_name">
        </activity>                   
	    <service android:name="com.aha.services.NetService"/>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.WRITE_SETTINGS" />    
</manifest>